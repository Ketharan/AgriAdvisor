<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.advisor.agriot.zeon.agriadvisor.fertilizer">



    <TextView
        android:id="@+id/textView_fertilizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:text="Tomato -> Fertilizer"
        android:textSize="18dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#aed581"
        android:padding="15dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:background="#9ccc65"
                android:text="Recommended Fertilizer :  Scotts starter Fertilizer   "
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtRec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_toLeftOf="@+id/btnStore"
                    android:gravity="left|center_vertical"
                    android:text="Visit our store to have a look on suitable providers :"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btnStore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="#fff176"
                    android:drawableLeft="@drawable/ic_local_grocery_store_black_24dp"
                    android:padding="10dp"
                    android:text="Store"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#BF360c"
                android:text="Spreading Last Date 25/07/2017"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#aed581"
                android:padding="15dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/textview_fertilizer_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="#9ccc65"
                android:padding="10dp"
                android:text="30.88 gram per metersquare.\n"
                android:textColor="#33691E"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#aed581"
                android:padding="15dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:weightSum="3"
                android:layout_weight="1.88">


                <Button

                    android:layout_width="100dp"
                    android:layout_height="111dp"
                    android:text="UREA \n(nitragen)\n15%"
                    android:background="@color/colorPrimary"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1" />


                <Button

                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="TSP \n(Phosphate)\n15%"
                    android:background="#c5e1a5"
                    android:layout_weight="1"/>


                <Button
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="MOP \n(Potasium)\n15%"
                    android:background="@color/colorPrimary"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1" />



            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#aed581"
                android:padding="15dp"
                android:layout_marginTop="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:id="@+id/textView4"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"
                    android:background="#9ccc65"
                    android:padding="10dp"
                    android:text="Keep out of reach from children"
                    android:textColor="#33691E"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/textView4"
                    app:srcCompat="@drawable/caution" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/More"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/btnHelp"
                    android:background="#fff176"
                    android:text="More info" />

                <Button
                    android:id="@+id/btnHelp"
                    android:layout_width="105dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:background="#fff176"
                    android:drawableLeft="@drawable/ic_call_black_24dp"
                    android:text="need help" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#aed581"
                android:padding="15dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>



    </ScrollView>

</LinearLayout>
