<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.advisor.agriot.zeon.agriadvisor.cultivation">

    <TextView
        android:id="@+id/textView_fertilizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="Tomato -> Crop Installation"
        android:textSize="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#aed581"
        android:padding="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="24dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="Visit our store to find trending  tools"
            android:textSize="16dp" />


        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:background="#fff176"
            android:drawableLeft="@drawable/ic_local_grocery_store_black_24dp"
            android:padding="10dp"
            android:text="Store" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#aed581"
        android:padding="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">


        <Button
            android:id="@+id/button6"

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Temprature \n 21-27 C"
            android:textSize="13dp" />


        <Button
            android:id="@+id/button2"

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#c5e1a5"
            android:text="Mid march\n end august"
            android:textSize="13dp" />


        <Button
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="soil PH\n 5.8-6.8"
            android:textSize="13dp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#aed581"
        android:padding="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3">


        <Button

            android:id="@+id/button8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#c5e1a5"
            android:text="Soil depth \n 15-20 cm"
            android:textSize="13dp" />


        <Button


            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="peferable \n sandy loam soil"
            android:textSize="13dp" />


        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#c5e1a5"
            android:text="Transplanting \n 3-5 true leaves"
            android:textSize="13dp" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#aed581"
        android:padding="15dp" />

    <TextView
        android:id="@+id/textview_fertilizer_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="15dp"
        android:layout_weight="0.29"
        android:background="#9ccc65"
        android:padding="10dp"
        android:text="Tomato is not resistant to drought.\n"
        android:textColor="#d50000"
        android:textSize="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#aed581"
        android:padding="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button9"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="false"
            android:layout_marginRight="12dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/btnHelp"
            android:background="#fff176"
            android:foregroundGravity="bottom|right"
            android:text="More"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnHelp"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#fff176"
            android:drawableLeft="@drawable/ic_call_black_24dp"
            android:text="need help" />
    </RelativeLayout>


</LinearLayout>
